<script src="/axios/axios.min.js"></script>
<script>
    function axios_validation(url,params,form_id,error_text){
        axios({
            url:url,
            method:'get',
            params:params,
            timeout:3000
        }).then((result)=>{
            console.log(result)
            if( result.data.status === 1){
                $(form_id).submit();
            }else{
                toastr.error(error_text)
            }
        }).catch(()=>{
            toastr.error("404 Error Not Found")
        });
    }
</script>



<script>
    
    
    $(function () {
      $('#employee').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
      
    });

    function update(data){
        data = JSON.parse(data)
        $("input[name=Uname]").val(data.shop_name);
        $("input[name=Ulocation]").val(data.location)
        $("input[name=Ucontact]").val(data.contact)
        $("input[name=Uo_time]").val(data.opening_time)          
        $("input[name=Uc_time]").val(data.closing_time)
        $("input[name=id_update]").val(data.id)
    }

    function del(id){
        $("input[name=id_del]").val(parseInt(id))
        if(confirm("ยืนยันการลบข้อมูล") == true){
            $("#delete").submit();
        }
    }

    function vali(mode){
        /*
            Mode insert , update 
        */
        // (document.querySelector("input[name=Fname]").innerText).trim()
        if(mode === "add"){
            let name = ($("input[name=name]").val()).trim();
            let location = ($("input[name=location]").val()).trim();
            let contact = ($("input[name=contact]").val()).trim();
            let o_time = ($("input[name=o_time]").val()).trim(); 
            let c_time = ($("input[name=c_time]").val()).trim(); 

            if (name !== "" && location !== "" && contact !== "" && o_time !== "" && c_time !== "") {
                let params= {
                    name:name
                }
                axios_validation(
                    'manage_shop/check_can_add',
                    params,
                    '#manage_add',
                    'มีชื่อร้านนี้อยู่แล้ว'
                );
            }else{
                toastr.error("! กรุณาใส่ข้อมูลให้ครบ")
            }
            return false;

        }else if(mode === "update"){
            let name = ($("input[name=Uname]").val()).trim();
            let location = ($("input[name=Ulocation]").val()).trim();
            let contact = ($("input[name=Ucontact]").val()).trim();
            let o_time = ($("input[name=Uo_time]").val()).trim(); 
            let c_time = ($("input[name=Uc_time]").val()).trim(); 

            if(name !== "" && location !== "" && contact !== "" && o_time !== "" && c_time !== ""){
                let params= {
                    name: name,
                    id: $("input[name=id_update]").val()
                }
                axios_validation(
                    'manage_shop/check_can_update',
                    params,
                    '#manage_update',
                    'มีชื่อร้านนี้อยู่เเล้ว'
                );
            }else{
                toastr.error("! กรุณาใส่ข้อมูลให้ครบ")
            }
            return false;
        }
        
    }
    function req_detail(type, input){
        if (type=="room") {
            window.location = `manage_shop_room?shop_id=${input}`
        }
        else if (type=="emp") {
            window.location = `manage_shop_emp?shop_id=${input}`
        }
        
    }
  
</script>


