    </div>
</div>

<script src="/axios/axios.min.js"></script>
<script>
    
    function axios_validation(url,params,form_id,error_text){
        axios({
            url:url,
            method:'get',
            params:params,
            timeout:3000
        }).then((result)=>{
            if( result.data.status == 1){
                $(form_id).submit();
            }else{
                toastr.error(error_text)
            }
        }).catch(()=>{
            toastr.error("404 Error Not Found")
        });
    }
</script>
<script>
    
    $(function () {
      $('#service').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      }); 
    });

    function update(data){
        data = JSON.parse(data)
        $("input[name=Uname]").val(data.name);
        $("input[name=Ushop_ratio]").val(data.shop_ratio);
        $("input[name=Uemp_ratio]").val(data.emp_ratio);
        $("input[name=id_update]").val(data.id);
    }

    function del(id){
        $("input[name=id_del]").val(parseInt(id))
        if(confirm("ยืนยันการลบข้อมูล") == true){
            $("#delete").submit();
        }
    }

    function vali(mode){
        /*
            Mode insert , update 
        */
        // (document.querySelector("input[name=Fname]").innerText).trim()
        if(mode === "add"){
            let name = ($("input[name=name]").val()).trim();
            let shop_ratio = ($("input[name=shop_ratio]").val()).trim();
            let emp_ratio = ($("input[name=emp_ratio]").val()).trim();
    
            if( name !== "" && shop_ratio !== "" && emp_ratio !== ""){
                let params= {
                    name:name,
                    shop_ratio:shop_ratio,
                    emp_ratio:emp_ratio,
                    type_id:$("input[name=type_id]").val(),
                }
                axios_validation(
                    'manage_service/check_can_add',
                    params,
                    '#mange_add',
                    'มีบริการนี้อยู่เเล้ว'
                );
                
            }else{
                toastr.error("! กรุณาใส่ข้อมูลให้ครบ")
            }
            return false;
        }else if(mode === "update"){
            let name = ($("input[name=Uname]").val()).trim();
            let shop_ratio = ($("input[name=Ushop_ratio]").val()).trim();
            let emp_ratio = ($("input[name=Uemp_ratio]").val()).trim();
    
            if( name !== "" && shop_ratio !== "" && emp_ratio !== ""){
                let params= {
                    name:name,
                    shop_ratio:shop_ratio,
                    emp_ratio:emp_ratio,
                    type_id:$("input[name=type_id]").val(),
                    id:$("input[name=id_update]").val()
                }
                axios_validation(
                    'manage_service/check_can_update',
                    params,
                    '#mange_update',
                    'มีบริการนี้อยู่เเล้ว'
                );
            }else{
                toastr.error("! กรุณาใส่ข้อมูลให้ครบ")
            }
            return false;
        }
        
    }

    function req_detail(group_id, type_id, service_id){
        window.location = `manage_service_function?group_id=${group_id}&type_id=${type_id}&service_id=${service_id}`
    }
  
</script>

