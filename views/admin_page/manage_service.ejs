            <span aria-hidden="true" class="text-light">&times;</span>
          </button>
        </div>
        <form id="mange_add" action="manage_service/add" method="post">
            <input type="number" class="form-control d-none" name="prod_type_id" value="" >
            <div class="modal-body">
