<script src="/axios/axios.min.js"></script>
<script>
    function axios_validation(url,params,form_id,error_text){
        axios({
            url:url,
            method:'get',
            params:params,
            timeout:3000
        }).then((result)=>{
            if( result.data.status == 1){
                $(form_id).submit();
            }else{
                toastr.error(error_text)
            }
        }).catch(()=>{
            toastr.error("404 Error Not Found")
        });
    }
</script>



<script>
    
    
    $(function () {
      $('#sale').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
      
    });

    $(function () {
      $('#rating').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
      
    });

    let oldOp ="";
    function update(mode,data){
        data = JSON.parse(data)
        console.log(data)
        if (mode=="display"){
            let f_start_date = new Intl.DateTimeFormat('id-ID',{ day:'2-digit', month:'2-digit', year:'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', timeZoneName: 'short'}).format(new Date(data.start_date))
            let f_end_date = new Intl.DateTimeFormat('id-ID',{ day:'2-digit', month:'2-digit', year:'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', timeZoneName: 'short'}).format(new Date(data.end_date))
            $("input[name=Dcustomer]").val(`${data.cust_fname} ${data.cust_lname}`)
            $("input[name=Dstart_date]").val(f_start_date)
            $("input[name=Dend_date]").val(f_end_date)
            $("input[name=Dservice]").val(`${data.serv_name} - ${data.serv_time} นาที ${data.serv_price} บาท`) 
            $("input[name=Dshop]").val(data.shop_name)
            $("input[name=Demployee]").val(`${data.emp_fname} ${data.emp_lname}`)
            $("input[name=Droom]").val(data.room_name)           
            $("input[name=id_update]").val(data.id)
        } else if (mode=="vip_pay"){
            $("input[name=sale_id]").val(data.id)
            $("input[name=vip_id]").val(data.vip_id)
            $("input[name=acc_val]").val(data.acc_val)
            $("input[name=remain_val]").val(data.remain_val)
            $("input[name=all]").val(data.total_price)
            if (data.remain_val > data.total_price){
                $("input[name=use_val]").val(data.total_price) 
                $("input[name=total]").val(0) 
            } else {
                $("input[name=use_val]").val(data.remain_val) 
                $("input[name=total]").val(data.total_price-data.remain_val) 
            }   
            $("input[name=id_update]").val(data.id)
        } else if (mode=="pay"){
            $("input[name=sale_id]").val(data.id)
            $("input[name=total]").val(data.total_price)         
            $("input[name=id_update]").val(data.id)
        }

    }

    function vali(mode){
        /*
            Mode insert , update 
        */
        // (document.querySelector("input[name=Fname]").innerText).trim()
        if(mode === "pay"){
            let sale_id = $("input[name=sale_id]").val();
            let total = $("input[name=total]").val();
            let payment_meth = $("select[name=payment_meth]").val();
            let datetime = $("input[name=datetime]").val();
            let amount = $("input[name=amount]").val();
            if( sale_id !== "" && total !== "" && payment_meth !== "" && datetime !== "" && amount !== ""){
                if (total == amount) {
                    $("#pay").submit();
                }else{
                    toastr.error("! จำนวนเงินไม่ถูกต้อง")
                }
            }else{
                toastr.error("! ข้อมูลไม่ถูกต้อง")
            }
            return false;


        }else if(mode === "vip_pay"){
            let sale_id = $("input[name=sale_id]").val();
            let vip_id = $("input[name=vip_id]").val();
            let all = $("input[name=all]").val();
            let use_val = $("input[name=use_val]").val();
            let total = $("input[name=total]").val();
            let payment_meth = $("select[name=payment_meth]").val();
            let datetime = $("input[name=vip_datetime]").val();
            let amount = $("input[name=vip_amount]").val();
            if( sale_id !== "" && vip_id !== "" && all !== "" && use_val !== "" && total !== "" && 
                payment_meth !== "" && datetime !== "" && amount !== ""
            ){
                if (total == amount) {
                    $("#vip_pay").submit();
                }else{
                    toastr.error("! จำนวนเงินไม่ถูกต้อง")
                }
            }else{
                toastr.error("! ข้อมูลไม่ถูกต้อง")
            }
            return false;
        }
        
    }

    function go(mode,data){
        data = JSON.parse(data)
        window.location = `/admin/${mode}?sale_id=${data.id}`;
        // window.open( `/admin/${mode}?sale_id=${data.id}`, "_blank");
    }
  
</script>


