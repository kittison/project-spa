                                <td><%= i.menu_name%></td>
                                <td>
                                    <div class="m-2"> 
                                        <% for(let cost of i.cost) {%>
                                            <p class=" btn-primary p-1 my-1 rounded d-inline"><%=cost.price%>/<%=cost.time%> ซม</p> 
                                            <!-- <p class=" btn-primary p-1 my-1 rounded d-inline">800/1ซม</p>  -->
                                        <% } %>
                                    </div>
                                    
                                </td>
                               
