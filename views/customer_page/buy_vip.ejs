                    <select class="form-control" id="service" name="course" value="">
                        <option id="course_none" value="" ></option>
                        <% for(i of data_course){%> 
                            <option  id="course_<%=i.id%>" value="<%=i.id%>"><%=i.name%> - <%=i.price%> บาท</option>
